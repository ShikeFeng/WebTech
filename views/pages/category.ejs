<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en-GB" xml:lang="en-GB">
<head>
	<title>Category</title>
	<meta charset="utf-8"></meta>
	<meta name="viewpoint" content="width=device-width, initial-scale=1"></meta>
	<meta name="description" content="This is the category page; it contains all the blog posts from a category"></meta>
	<meta name="author" content="Shike and Silviu"></meta>

	<!-- Logo of the Website -->
	<link rel="icon" href="../../img/logo.png">
	<!-- Bootstrap CSS -->
	<link href="../../css/bootstrap.min.css" rel="stylesheet"></link>
	<!-- Custom CSS -->
	<link href="../../css/customize.css" rel="stylesheet"></link>
	<link href="../../css/category.css" rel="stylesheet"></link>
</head>
<body>

	<header>
		<% if(session.loggedIn) {%>
        	<% var userName = session.userName%>
			<% var userImgPath = session.imageUrl%>
			<% var userId = session.userId%>
			<% include ../partials/header1 %>
		<% } else { %>
			<% include ../partials/header %>
		<% } %>
	</header>

    <!--Login popup-->
    <% include ../partials/auth-popup.ejs %>

    <div class="container-fluid">
		<div class="row">
			<div class="col-md-7" id="stories-column">
                <% for(var post = 0; post < posts.length; post++) { %>
					<div class="short-story-container">
						<div class="container short-profile-details">
							<img class="user-profile-pic" src="../..<%= posts[post].userImgPath %>"/>
							<span class="user-name">
								<a href="/my_stories.html/userId=<%= posts[post].userId %>">
									<%=posts[post].userName%>
								</a>
							</span>
							in
							<span class="category"><%=posts[post].categoryName%></span>
						</div>
						<a href="/read_post.html/id=<%=posts[post].id%>">
							<div class = "container short-post-picture">
								<img src="../..<%=posts[post].imageUrl%>"/>
							</div>
							<div class = "container short-post-title">
								<h2><%=posts[post].title%></h2>
							</div>
							<div class = "container short-post-story">
								<h4><%=posts[post].description%></h4>
							</div>
						</a>
					</div>
                <% } %>
			</div>
			<div class="col-md-5">
				<div class="most-recent-stories container">
					<div>
						<h3>Most recent stories</h3>
						<% for(var recentPost = 0; recentPost < recentPosts.length; recentPost++) { %>
							<a href="/read_post.html/id=<%= recentPosts[recentPost].id %>">
								<div class="container recent-story">
									<img class="user-profile-pic user-profile-pic-recent" src="../..<%= recentPosts[recentPost].userImgPath %>"/>
									<div class="container most-recent-stories-title">
										<b><%= recentPosts[recentPost].title %></b>
										in
										<%= recentPosts[recentPost].categoryName %>
									</div>
									<div class="container most-recent-stories-author">
										<i><%= recentPosts[recentPost].userName %></i>
									</div>
								</div>
							</a>
						<% } %>
					</div>
				</div>
				<div class="category-clipart">
                    <% if(categoryId == 0) {%>
						<img class="show-false" src="../../svg/blog-post.svg"/>
					<% } else if(categoryId == 1) {%>
                    	<img class="show-false" src="../../img/colored-key.png"/>
					<% } else if(categoryId == 2) { %>
						<img class="show-false" src="../../svg/brain-animated.svg"/>
                    <% } else if(categoryId == 3) { %>
						<img class="show-false" src="../../svg/graph.svg"/>
                    <% } else if(categoryId == 4) { %>
						<img class="show-false" src="../../svg/enterprise-resized.svg"/>
                    <% } else if(categoryId == 5) { %>
						<img class="show-false" src="../../img/research-shadow.png"/>
                    <% } else { %>
						<img class="show-false" src="../../svg/raspberry-animated.svg"/>
					<% } %>
				</div>
			</div>
		</div>
	</div>

	<footer class=" container-fluid myfooter">
        <% include ../partials/footer %>
	</footer>

<!--	JavaScrip files included-->
<!-- JQuery -->
	<script src="../../js/jquery-3.1.1.js"></script>
<!-- Bootstrap -->
	<script src="../../js/bootstrap.min.js"></script>
<!-- AES Encrption -->
<script src="../../js/crypto-js/crypto-js.js"></script>
<!-- Validator -->
<script src="../../js/validator.min.js"></script>
<!-- Custom JS-->
	<script src="../../js/validate.js"></script>
	<script src="../../js/navbar.js"></script>
	<script src="../../js/popup.js"></script>
	<script src="../../js/recent_stories.js"></script>
</body>
</html>
